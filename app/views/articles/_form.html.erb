<%= form_with(model: article) do |form| %>
  <% if article.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(article.errors.count, "error") %> prohibited this article from being saved:</h2>

      <ul>
        <% article.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <!-- div de inserção do nome do blog -->
  <div>
      <%= form.label :name, style: "display: block" %>
      <%= form.text_field :name, class: ('input-error' if article.errors[:name].any?)%>
  </div>      
  <% if article.errors[:name].any? %>
    <div class="error-messages">
      <ul>
        <% article.errors[:name].each do |error| %>
          <li><%= error.capitalize %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  
  <!-- div de inserção do body do article -->
  <div>
    <%= form.label :body, style: "display: block" %>
    <%= form.text_field :body, class: ('input-error' if article.errors[:body].any?)%>
  </div>
  <% if article.errors[:body].any? %>
    <div class="error-messages">
      <ul>
        <% article.errors[:body].each do |error| %>
          <li><%= error.capitalize %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <% if @article.new_record?%>
    <%= form.submit "Create article"%>
  <% else %>
    <%= form.submit "Update article"%>
  <% end %>
<% end %>